<connections>
    <!--
        ========================================
        SMPP Simulator - Single Container Configuration
        ========================================
        SMSC Server Mode: Accepts incoming SMPP connections
        Ports: 2775, 2776, 2777, 2778, 2779, 2780

        External SMPP clients can connect to these ports to send/receive messages
    -->

    <!-- Connection 13: SMSC Receiver on port 2775 -->
    <connection id="13">
        <name>SMSC-Receiver-2775</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <receiver bindType="SMSC">
            <port>2775</port>
            <systemId>smsc_rx</systemId>
            <password>smsc123</password>
            <bindOption>receiver</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </receiver>
    </connection>

