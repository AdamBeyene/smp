    <!-- C1 receives on 2790, sends on 2791          -->
    <!-- Pattern: ESME RX client + SMSC TX server     -->
    <!-- ============================================ -->

    <!-- Connection 300: Hybrid - ESME Receiver (client) + SMSC Transmitter (server) -->
    <connection id="300">
        <name>C1-Hybrid-ESME-RX-SMSC-TX</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <receiver bindType="ESME">
