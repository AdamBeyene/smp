            <port>23121</port>
            <systemId>tmtest</systemId>
            <password>1234</password>
            <bindOption>transceiver</bindOption>
            <threads>20</threads>
        </receiver>
        <!-- Original receiver → Now transmitter (ESME client, transceiver) -->
        <transmitter bindType="ESME">
            <port>13121</port>
            <systemId>tmtest</systemId>
            <password>1234</password>
            <bindOption>transceiver</bindOption>
            <threads>20</threads>
        </transmitter>
    </connection>

