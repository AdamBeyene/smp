    <!-- ============================================ -->
    <!-- HYBRID MODE: Mixed ESME/SMSC in same conn    -->
    <!-- C2 sends on 2791, receives on 2790          -->
    <!-- Pattern: SMSC TX server + ESME RX client     -->
    <!-- This is the OPPOSITE of C1's hybrid conn     -->
    <!-- ============================================ -->

    <!-- Connection 300: Hybrid - SMSC Transmitter (server) + ESME Receiver (client) -->
    <connection id="300">
        <name>C2-Hybrid-SMSC-TX-ESME-RX</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <transmitter bindType="SMSC">
            <port>2790</port>
            <systemId>sysid_test</systemId>
