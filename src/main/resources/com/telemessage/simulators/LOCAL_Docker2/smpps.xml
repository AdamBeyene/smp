<connections>
    <!--
        ========================================
        Container 2 (simulator-2) SMPP Configuration
        ========================================
        This container acts in DUAL role:
        1. SMSC (Server) - Accepts connections from Container 1 on ports 2778, 2779, 2780
        2. ESME (Client) - Initiates connections to Container 1 on ports 2775, 2776, 2777

        Total: 6 bidirectional connections for comprehensive testing
    -->

    <!-- ============================================ -->
    <!-- SMSC MODE: Container 2 acts as SERVER        -->
    <!-- Container 1 connects to these ports as ESME  -->
    <!-- ============================================ -->

    <!-- Connection 23: SMSC Receiver on port 2778 -->
    <connection id="23">
        <name>C2-SMSC-Receiver-2778</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <receiver bindType="SMSC">
            <port>2778</port>
            <systemId>c2_smsc_rx</systemId>
            <password>smsc789</password>
            <bindOption>receiver</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </receiver>
    </connection>

    <!-- Connection 24: SMSC Transmitter on port 2779 -->
    <connection id="24">
        <name>C2-SMSC-Transmitter-2779</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <transmitter bindType="SMSC">
            <port>2779</port>
            <systemId>c2_smsc_tx</systemId>
            <password>smsc789</password>
            <bindOption>transmitter</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </transmitter>
    </connection>

    <!-- Connection 25: SMSC Transceiver on port 2780 -->
    <connection id="25">
        <name>C2-SMSC-Transceiver-2780</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <transceiver bindType="SMSC">
            <port>2780</port>
            <systemId>c2_smsc_trx</systemId>
            <password>smsc789</password>
            <bindOption>transceiver</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </transceiver>
    </connection>

    <!-- ============================================ -->
    <!-- ESME MODE: Container 2 acts as CLIENT        -->
    <!-- Connects to Container 1's SMSC ports         -->
    <!-- ============================================ -->

    <!-- Connection 200: ESME Transmitter to Container 1 port 2775 -->
    <connection id="200">
        <name>C2-ESME-TX-to-C1-2775</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <transmitter bindType="ESME">
            <host>simulator-1</host>
            <port>2775</port>
            <systemId>c2_esme_tx</systemId>
            <password>esme789</password>
            <bindOption>transmitter</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </transmitter>
    </connection>

    <!-- Connection 201: ESME Receiver to Container 1 port 2776 -->
    <connection id="201">
        <name>C2-ESME-RX-to-C1-2776</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <receiver bindType="ESME">
            <host>simulator-1</host>
            <port>2776</port>
            <systemId>c2_esme_rx</systemId>
            <password>esme789</password>
            <bindOption>receiver</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </receiver>
    </connection>

    <!-- Connection 202: ESME Transceiver to Container 1 port 2777 -->
    <connection id="202">
        <name>C2-ESME-TRX-to-C1-2777</name>
        <automatic_dr>DELIVRD</automatic_dr>
        <transceiver bindType="ESME">
            <host>simulator-1</host>
            <port>2777</port>
            <systemId>c2_esme_trx</systemId>
            <password>esme789</password>
            <bindOption>transceiver</bindOption>
            <threads>10</threads>
            <concatenation>UDHI</concatenation>
            <encoding>UTF-16BE</encoding>
        </transceiver>
    </connection>

</connections>
