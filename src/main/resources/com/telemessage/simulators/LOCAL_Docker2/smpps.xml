    <!-- Container 1 connects as SMSC CLIENT          -->
    <!-- (SMSC-to-SMSC peer routing)                  -->
    <!-- ============================================ -->

    <!-- Connection 33: SMSC Receiver on port 2784 -->
    <connection id="33">
        <name>C2-SMSC-P2P-Receiver-2784</name>
